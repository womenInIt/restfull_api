{
    "openapi": "3.0.1",
    "info": {
        "title": "restfull-api",
        "version": "0.0.0"
    },
    "paths": {
        "/": {
            "get": {
                "summary": "get all ideas from file",
                "responses": {
                    "404": {
                        "description": "Ideas not found"
                    }
                },
                "tags": [
                    "ideas"
                ]
            },
            "post": {
                "summary": "add idea to file",
                "requestBody": {
                    "description": "Idea object that needs to be added to the file",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PostIdea"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "404": {
                        "description": "Idea not found"
                    }
                },
                "tags": [
                    "ideas"
                ]
            }
        },
        "/{id}": {
            "get": {
                "summary": "get idea by id",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of idea to return",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "404": {
                        "description": "Idea not found"
                    }
                },
                "tags": [
                    "ideas"
                ]
            },
            "delete": {
                "summary": "delete idea by id from file",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of pet to return",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "404": {
                        "description": "Idea not found"
                    }
                },
                "tags": [
                    "ideas"
                ]
            },
            "put": {
                "summary": "update Idea object from the file",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of idea to update",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "requestBody": {
                    "description": "update Idea object from the file",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PostIdea"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Ok"
                    },
                    "404": {
                        "description": "Idea not found"
                    }
                },
                "tags": [
                    "ideas"
                ]
            }
        },
        "/weather/{town}": {
            "get": {
                "summary": "request weather for town from openweathermap.org",
                "parameters": [
                    {
                        "name": "town",
                        "in": "path",
                        "description": "town",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "400": {
                        "description": "Invalid ID supplied",
                        "content": {}
                    }
                },
                "tags": [
                    "weather"
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "PostIdea": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "status": {
                        "type": "string",
                        "description": "Idea text"
                    },
                    "autor": {
                        "type": "string",
                        "description": "Idea autor"
                    },
                    "type": {
                        "type": "string",
                        "description": "Idea type"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "ideas",
            "description": "Ideas from text file"
        },
        {
            "name": "weather",
            "description": "weather result from other API"
        }
    ]
}